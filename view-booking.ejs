<!DOCTYPE html>
<html>
<head>
    <title>Your Bookings</title>
    <style>
        body {
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #3498db;
            color: white;
            text-align: center;
            padding: 15px 0;
        }

        .container {
            max-width: 800px;
            margin: 30px auto;
            background-color: white;
            padding: 25px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            border-radius: 8px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px 15px;
            border-bottom: 1px solid #f2f2f2;
            text-align: left;
        }

        th {
            background-color: #f5f5f5;
            font-weight: 600;
        }

        tr:hover {
            background-color: #e8f0fe;
        }

        .no-data {
            text-align: center;
            font-style: italic;
            color: #777;
        }
    </style>
</head>
<body>
    <header>
        <h1>Your Bookings</h1>
    </header>

    <div class="container">
        <% if (req.session.userType === 'provider') { %>
            <table>
                <thead>
                    <tr>
                        <th>Service</th>
                        <th>Provider</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (service.length > 0) { %>
                        <% for (var i = 0; i < service.length; i++) { %>
                            <tr>
                                <td><%- service[i].service_name %></td>
                                <td><%- service[i].c_name %></td>
                                <td>Confirmed</td>
                            </tr>
                        <% } %>
                    <% } else { %>
                        <tr>
                            <td colspan="3" class="no-data">Data not found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        <% } else { %>
            <script>
                window.location.href = '/register';
            </script>
        <% } %>
    </div>
</body>
</html>
